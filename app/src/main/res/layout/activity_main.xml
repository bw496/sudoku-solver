<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.benwest496.sudokusolver.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/sudokuGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            >


        </GridLayout>

        <GridLayout
            android:id="@+id/inputGridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <GridLayout
                    android:id="@+id/numbersGridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="9"
                    android:rowCount="9"
                    android:orientation="horizontal"
                    android:layout_weight="0.25">

                    <Button
                        android:id="@+id/oneTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="1" />

                    <Button
                        android:id="@+id/twoTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="2" />

                    <Button
                        android:id="@+id/threeTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="3"
                        />

                    <Button
                        android:id="@+id/fourTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="4" />

                    <Button
                        android:id="@+id/fiveTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="5" />

                    <Button
                        android:id="@+id/sixTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="2"
                        android:layout_column="3"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="6" />

                    <Button
                        android:id="@+id/sevenTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="7" />

                    <Button
                        android:id="@+id/eightTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="8" />

                    <Button
                        android:id="@+id/nineTextView"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_row="3"
                        android:layout_column="3"
                        android:layout_gravity="left|top"
                        android:background="@drawable/gsback"
                        android:textColor="#000000"
                        android:textSize="40dp"
                        android:text="9" />

                </GridLayout>

                <GridLayout
                    android:id="@+id/buttonsGridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/solveButton"
                            android:text="SOLVE"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            />

                        <Button
                            android:id="@+id/clearButton"
                            android:text="CLEAR"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            />

                        <Button
                            android:id="@+id/resetButton"
                            android:text="RESET"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            />
                    </LinearLayout>


                </GridLayout>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</RelativeLayout>
